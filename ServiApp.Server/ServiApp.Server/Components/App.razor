    <base href="/" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["ServiApp.Server.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>
<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script>
        document.addEventListener('click', function(e) {
            // Si se hace click en un link del nav y estamos en móvil
            if (e.target.closest('.nav-scrollable .nav-link') && window.innerWidth < 641) {
                const toggle = document.getElementById('navbar-toggle');
                if (toggle && toggle.checked) {
                    // Pequeño delay para que la navegación se complete primero
                    setTimeout(() => {
                        toggle.checked = false;
                    }, 100);
                }
            }
        });
    </script>
</body>
</html>