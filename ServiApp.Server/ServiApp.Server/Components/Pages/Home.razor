@page "/"
@inject NavigationManager nav
@rendermode InteractiveServer

<PageTitle>Servi Click - Resolvemos lo que otros complican</PageTitle>

<!-- Navbar mejorado con gradiente -->
<header class="navbar navbar-dark shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <a href="/" class="navbar-brand d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor"
                 stroke-linecap="round" stroke-linejoin="round" stroke-width="2" aria-hidden="true"
                 class="me-2" viewBox="0 0 24 24">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
            </svg>
            <strong style="font-size: 1.3rem; letter-spacing: 0.5px;">Servi Click</strong>
        </a>
    </div>
</header>

<!-- Hero Section mejorado -->
<main>
    <section class="hero-section position-relative overflow-hidden">
        <!-- Fondo con gradiente animado -->
        <div class="hero-background"></div>

        <div class="container position-relative" style="z-index: 2;">
            <div class="row py-5 py-lg-6">
                <div class="col-lg-8 col-md-10 mx-auto text-center">
                    <!-- Badge o etiqueta destacada -->
                    <div class="mb-4 animate-fade-in">
                        <span class="badge rounded-pill px-4 py-2"
                              style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px);
                                     border: 1px solid rgba(255, 255, 255, 0.3); font-size: 0.9rem;">
                            ✨ Tu solución en un click
                        </span>
                    </div>

                    <!-- Título principal -->
                    <h1 class="display-3 fw-bold mb-4 animate-slide-up" style="color: #1a202c; line-height: 1.2;">
                        ¡Bienvenido a <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                                    -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                            Servi Click
                        </span>!
                    </h1>

                    <!-- Subtítulo -->
                    <p class="lead mb-4 animate-slide-up" style="font-size: 1.5rem; color: #4a5568; font-weight: 500; animation-delay: 0.1s;">
                        Resolvemos lo que otros complican
                    </p>

                    <!-- Descripción -->
                    <p class="mb-5 animate-slide-up" style="font-size: 1.1rem; color: #718096; max-width: 600px; margin: 0 auto; animation-delay: 0.2s;">
                        Encuentra servicios de calidad al alcance de tu mano. Rápido, confiable y sin complicaciones.
                    </p>

                    <!-- Botón de acción -->
                    <div class="d-flex justify-content-center animate-slide-up" style="animation-delay: 0.3s;">
                        <button type="button" class="btn btn-primary btn-lg px-5 py-3 shadow-lg btn-hover"
                                @onclick="IrAServicios"
                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                       border: none; border-radius: 50px; font-weight: 600; font-size: 1.1rem;">
                            Ver Servicios
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<!-- Footer mejorado -->
<footer class="py-5 mt-auto" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-3 mb-md-0">
                <h5 class="fw-bold mb-3">Servi Click</h5>
                <p class="mb-0" style="opacity: 0.9;">Resolvemos lo que otros complican. Tu solución en un click.</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p class="mb-2" style="opacity: 0.9;">© 2025 Servi Click - Todos los derechos reservados</p>
                <a href="#" class="text-white text-decoration-none" style="opacity: 0.9;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16" style="vertical-align: middle;">
                        <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z" />
                    </svg>
                    Volver arriba
                </a>
            </div>
        </div>
    </div>
</footer>

<style>
    .hero-section {
        min-height: 70vh;
        display: flex;
        align-items: center;
        position: relative;
        background: #f7fafc;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #667eea15 0%, #764ba215 50%, #f093fb15 100%);
        opacity: 0.5;
    }

        .hero-background::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(102, 126, 234, 0.1) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
        }

    @@keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }

    .animate-slide-up {
        animation: slideUp 0.8s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-hover {
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn-hover:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4) !important;
        }

        .btn-hover::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            transition: left 0.5s ease;
        }

        .btn-hover:hover::before {
            left: 100%;
        }

    .navbar {
        backdrop-filter: blur(10px);
    }

    @@media (max-width: 768px) {
        .display-3 {
            font-size: 2.5rem;
        }

        .hero-section {
            min-height: 60vh;
        }
    }
</style>

@code {
    private void IrAServicios()
    {
        nav.NavigateTo("/servicios");
    }
}